{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib",
    "target": "ES2019",
    "module": "CommonJS",

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
